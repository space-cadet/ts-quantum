{
  "name": "ts-quantum",
  "version": "1.0.0",
  "description": "TypeScript library for quantum mechanics calculations and utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Deepak Vaid",
  "license": "MIT",
  "keywords": [
    "quantum",
    "quantum-mechanics", 
    "quantum-computing",
    "physics",
    "typescript",
    "state-vectors",
    "quantum-gates",
    "angular-momentum",
    "wigner-symbols"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/space-cadet/ts-quantum.git"
  },
  "bugs": {
    "url": "https://github.com/space-cadet/ts-quantum/issues"
  },
  "homepage": "https://github.com/space-cadet/ts-quantum#readme",
  "scripts": {
    "build": "tsc --build --verbose",
    "clean": "rm -rf dist node_modules coverage",
    "test": "vitest run",
    "test:watch": "vitest watch", 
    "test:coverage": "vitest run --coverage",
    "docs": "typedoc",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@types/mathjs": "^9.4.2",
    "mathjs": "^12.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^0.34.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "vitest": {
    "exclude": [
      "node_modules",
      "dist"
    ],
    "environment": "node"
  }
}
